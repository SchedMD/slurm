source ./globals

set test_id     "21.3"
set exit_code   0
set matches     0
set not_support 0

print_header $test_id

#
# Report the sacctmgr version format
#
 
spawn $sacctmgr -V
expect {
	-re "slurm \[0-9]*.\[0-9]*.\[0-9]*" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: sacctmgr not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$matches != 1} {
	send_user "\nFAILURE: sacctmgr -V failed ($matches)\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
