source ./globals

set test_id     "1.41"
set exit_code   0
set task_cnt    4
set resp_cnt    0
set timed_out   0

print_header $test_id

#
# Submit a slurm job that will execute 'id' on 1 node and over task_cnt tasks
#
set timeout [expr $max_job_delay + 60]
spawn $srun -N1-2 -n$task_cnt --overcommit --debugger-test -t1 $bin_id  
expect {
	-re "uid=" {
		send_user "\nFAILURE: task not stopped\n"
		set exit_code 1
		exp_continue
	}
	-re "host:" {
		incr resp_cnt
		exp_continue
	}
	-re "timelimit" {
		set timed_out 1
		exp_continue;
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		kill_srun
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

if {$timed_out == 1} {
	send_user "Early termination is expected, no worries.\n"
}

if {$task_cnt != $resp_cnt} {
	send_user "\nFAILURE: Did not get proper number of tasks: "
	send_user "$task_cnt, $resp_cnt\n"
	set exit_code 1
}
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
