source ./globals

set exit_code   0
set job_id      0

#
# Spawn a job with a deadline and no time
#
set timeout $max_job_delay
set time_error 0
set srun_pid [spawn $srun -v -N1 --deadline now+1hour --time-min 120 $bin_sleep 1]
expect {
	-re "Invalid time-min specification" {
		set time_error 1
		exp_continue
	}
	-re "launching StepId=($number).($re_word_str) on host" {
		set job_id $expect_out(1,string)
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$job_id != 0} {
	cancel_job $job_id
	fail "Job submitted despite the deadline"
}
if {$time_error == 0} {
	log_error "No time-min limit error"
	set exit_code 1
} else {
	log_debug "Time limit error expected, no worries"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
