source ./globals

set file_in       "$test_dir/input"
set file_in_task  "$test_dir/$test_name.%t.input"
set file_out_task "$test_dir/$test_name.%t.output"
set job_name      $test_name
set cycle_count   2
set task_cnt      [get_total_cpus]
set node_cnt      [llength [get_nodes_by_state]]
set other_opts    "-O"

log_info "Using $task_cnt tasks"

#
# Create random text files for each task
#
for {set tsk 0} {$tsk < $task_cnt} {incr tsk} {
    set chars "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
    set out ""
    set len [expr {int(rand()*128)}]
    for {set i 0} {$i < $len} {incr i} {
        append out [string index $chars [expr {int(rand() * [string length $chars])}]]
    }
    run_command -fail "echo $out > $test_dir/$test_name.$tsk.input"
}

#
# Run cycle_count jobs to copy job input to job output and compare sizes
#
for {set inx 0} {$inx < $cycle_count} {incr inx} {
	# Remove files from previous cycle
	for {set tsk 0} {$tsk < $task_cnt} {incr tsk} {
		set file_out_glob "$test_dir/$test_name.$tsk.output"
		exec $bin_rm -f $file_out_glob
	}

	# Submit a job that copies -i to -o
	run_command -fail "$srun --job-name=$job_name -e - -i $file_in_task -o $file_out_task -n$task_cnt -N1-$node_cnt $other_opts -t1 $bin_cat -"

	# Test output file sizes
	for {set tsk 0} {$tsk < $task_cnt} {incr tsk} {
		set file_out_glob "$test_dir/$test_name.$tsk.output"
		set input [run_command_output -fail "cat $test_dir/$test_name.$tsk.input"]
		set output ""
		wait_for_file $file_out_glob
		wait_for {$output == $input} {
			set output [run_command_output -fail "cat $file_out_glob"]
		}
		subtest {$output == $input} "Output file ($output) should be the same than input file ($input)"
	}
}
