source ./globals

set job_id 0

proc cleanup {} {
	global job_id

	cancel_job $job_id
}

#
# Submit a job and wait for the batch step, leave space for another step
# submitted outside the batch script
#
set job_id [submit_job "-N1 -n1 -t1 --wrap '$bin_sleep infinity'"]

# give time for stepmgr to be created
if {[wait_for_step ${job_id}.batch] != $::RETURN_SUCCESS} {
	fail "Step .batch not found"
}

#
# Now try to use the srun --jobid option to run in the already existing
# allocation, querying for himself
#
set step_id ${job_id}.0
set output [run_command_output -fail "$srun --jobid $job_id $scontrol -o show step $step_id"]
subtest {[regexp "StepId=${step_id}.*State=RUNNING" $output]} "srun should run in the existing job allocation "
