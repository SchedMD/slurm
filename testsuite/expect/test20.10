source ./globals

set exit_code  0

if {[file executable $qrerun] == 0} {
	skip "qrerun was not found"
}

set found 0
spawn $qrerun --help
expect {
	-re "Usage:" {
		set found 1
		exp_continue
	}
	timeout {
		log_error "qrerun is not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$found != 1} {
	fail "qrerun --help option failed"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
