source ./globals

set exit_code   0
set tasks       0
set task_cnt	5
set verbosity   0

#
# Submit a slurm job that will execute 'id' on 1 node and over task_cnt tasks
#
set timeout $max_job_delay
set srun_pid [spawn $srun -N1 -n$task_cnt -O -v -t1 $bin_id]
expect {
	-re "jobid" {
		set verbosity 1
		exp_continue
	}
	-re "uid=" {
		incr tasks
		exp_continue
	}
	-re "Unable to contact" {
		fail "Slurm appears to be down"
	}
	timeout {
		log_error "srun not responding"
		slow_kill $srun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$task_cnt != $tasks} {
	fail "Did not get proper number of tasks: $task_cnt, $tasks"
}
if {$verbosity != 1} {
	fail "Did not report job id with verbosity on"
}
if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
