source ./globals

set file_in     "test$test_id.input"
set exit_code   0
set job_id      0

set default_time [get_partition_default_time_limit]
if { $default_time != -1} {
	skip "This test is not compatible with default partition having a default time limit ($default_time)"
}

#
# Build input script file
#
exec $bin_rm -f $file_in
make_bash_script $file_in "$bin_sleep 5"

#
# Spawn a batch job with a deadline and no time
#
set timeout $max_job_delay
spawn $sbatch --output=/dev/null --error=/dev/null --deadline now+600 $file_in
expect {
	-re "Requested time limit is invalid" {
		set exit_code 1
		exp_continue
	}
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		set exit_code 0
		exp_continue
	}
	timeout {
		log_error "sbatch not responding"
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

if {$job_id == 0} {
	fail "Batch job not submitted"
}

if {[wait_for_job $job_id DONE] != 0} {
	fail "Job failed to run to completion"
}

spawn $scontrol show job $job_id
expect {
	-re "TimeLimit=00:10:00" {
		log_debug "Timelimit OK"
	}
	-re "TimeLimit=00:09:" {
		log_debug "Timelimit OK"
	}
	-re "TimeLimit=" {
		log_error ": Timelimit not OK with deadline"
		set exit_code 1
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$exit_code == 0} {
	exec $bin_rm -f $file_in
} else {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
