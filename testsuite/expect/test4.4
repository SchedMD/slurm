source ./globals

set exit_code   0
set matches     0

#
# Check the sinfo regular format
#

spawn $sinfo --Node
expect {
	-re "NODELIST" {
		incr matches
		exp_continue
	}
	-re "MIDPLANELIST" {
		incr matches
		exp_continue
	}
	-re "NODES " {
		incr matches
		exp_continue
	}
	-re "PARTITION" {
		incr matches
		exp_continue
	}
	-re "STATE" {
		incr matches
		exp_continue
	}
	-re "CPUS" {
		incr matches -10
		exp_continue
	}
	timeout {
		log_error "sinfo not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$matches != 4} {
	log_error "sinfo node format error"
	set exit_code 1
}


#
# Check the sinfo long format
#

set matches     0
set ranges      0
spawn $sinfo --Node --long --exact
expect {
	-re "NODELIST" {
		incr matches
		exp_continue
	}
	-re "MIDPLANELIST" {
		incr matches
		exp_continue
	}
	-re "NODES " {
		incr matches
		exp_continue
	}
	-re "PARTITION" {
		incr matches
		exp_continue
	}
	-re "STATE" {
		incr matches
		exp_continue
	}
	-re "CPUS" {
		incr matches
		exp_continue
	}
	-re "REASON" {
		incr matches
		exp_continue
	}
	-re "($number)(.)" {
		if (![string compare $expect_out(2,string) "+"]) {
			set ranges 1
		}
		exp_continue
	}
	timeout {
		log_error "sinfo not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$ranges != 0} {
	fail "sinfo exact match option failure"
}

if {$matches != 6} {
	fail "sinfo node long format error"
}
if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
