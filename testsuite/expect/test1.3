source ./globals

set test_id     "1.3"
set exit_code   0
set version     0

print_header $test_id

#
# Report the srun version number
#
set srun_pid [spawn $srun -V]
expect {
	-re "(slurm ($number)\.($number)\.($number).*\n)" {
		incr version
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		slow_kill $srun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$version != 1} {
	send_user "\nFAILURE: Did not get proper srun version number\n"
	set exit_code 1
}
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
