source ./globals

set task_num 2

if {[get_config_param "FrontendName"] ne "MISSING"} {
        skip "This test is incompatible with front-end systems"
}

#
# Spawn srun with $task_num tasks
#
set output [run_command_output -fail "$srun -N1 --ntasks-per-node=$task_num -O -l -t1 $bin_id"]
subtest {[regexp -all "uid=" $output] == $task_num} "Verify that $task_num tasks were launched"
