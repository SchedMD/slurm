source ./globals

set exit_code   0
set file_in     "test$test_id.bash"
set matches     0

#
# Spawn tasks via srun and immediately exit task 1 only
#
set timeout $max_job_delay
set srun_pid [spawn $srun -n10 -N1 -O -W2 -t2 ./$file_in]
expect {
	-re "First task exited" {
		log_debug "This error is expected, no worries"
		incr matches
		exp_continue
	}
	-re "tasks 0,2-9: running" {
		incr matches
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		slow_kill $srun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$matches != 2} {
	fail "Problem with srun wait option matches was $matches"
}
if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
