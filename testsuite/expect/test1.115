############################################################################
source ./globals

set test_id          "1.115"
set exit_code        0
set file_in          "test$test_id.input"

print_header $test_id

print_time

#
# Submit a slurm job that will sleep briefly, ignoring stdin
#
set timeout $max_job_delay
set match 0
make_bash_script $file_in "dd if=/dev/zero bs=1k | $srun -v -N1 -t1 sleep 10"
spawn ./$file_in
expect {
	-re "error" {
		send_user "\nFAILURE: Unexpected error from srun\n"
		set exit_code 1
		exp_continue
	}
	-re "Dropped pending I/O" {
		incr match
		exp_continue
	}	
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}
# Note if timing dependent message is not logged, not really a problem
if {$match != 1} {
	send_user "\nWARNING: Dropped I/O not logged\n"
}

print_time

if {$exit_code == 0} {
	exec $bin_rm -f $file_in
	send_user "\nSUCCESS: No error reported\n"
}
exit $exit_code
