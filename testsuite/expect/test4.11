source ./globals

set test_id      "4.11"
set exit_code    0
set matches      0

print_header $test_id

#
# Check the sinfo --list-reasons option output
#

spawn $sinfo --list-reasons
expect {
	-re "REASON *USER *TIMESTAMP *NODELIST" {
		incr matches
		exp_continue
	}
	-re "REASON *USER *TIMESTAMP *MIDPLANELIST" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: sinfo not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches == 0} {
	send_user "\nFAILURE: sinfo --list-reason output format failure\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
