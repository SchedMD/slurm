source ./globals

set exit_code   0
set file_script "test$test_id.bash"
set job_id      0

set min_job_age [get_min_job_age]
if {$min_job_age > 60} {
	skip "MinJobAge too large for this test"
}

make_bash_script $file_script "
if \[ \$SLURM_ARRAY_TASK_ID == 4 \]
then
	exit 0
fi
sleep 60
exit 0"

# submit a batch job array
spawn $sbatch -n1 --array=1-4 --output=/dev/null $file_script
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		log_debug "Job $job_id was submitted"
		exp_continue
	}
	-re "error" {
		fail "sbatch did not submit jobs"
	}
	timeout {
		log_error "sbatch not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

# wait for head job to complete
if {[wait_for_job $job_id "DONE"] != 0} {
	cancel_job $job_id
	fail "Error waiting for job $job_id to complete"
}

# wait a while for job purge to happen
log_debug "Waiting for job record purge to happen.."
sleep 65

# check that head job still exists
set match 0
spawn $squeue -tall --job=$job_id
expect {
	-re "${job_id}_4" {
		incr match
		exp_continue
	}
	-re "error" {
		log_error "Error running squeue"
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "squeue not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$match != 1} {
	fail "Head job not found"
}

cancel_job $job_id
if {$exit_code == 0} {
	file delete $file_script
} else {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
