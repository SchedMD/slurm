source ./globals

set exit_code   0
set needed_nodes 2
set matches 0
set ncpus ""

if {[test_select_type_params "CR_ONE_TASK_PER_CORE"]} {
	skip "This test is incompatible SelectTypeParameters=CR_ONE_TASK_PER_CORE"
}

log_user 0
spawn $sinfo -N -h -p [default_partition] -t idle -o "%c"
expect {
	-re "($number)" {
		incr matches
		if {$ncpus eq ""} {
			set ncpus $expect_out(1,string)
		} elseif {$expect_out(1,string) < $ncpus} {
			set ncpus $expect_out(1,string)
		}
		exp_continue
	}
	timeout {
		log_error "sinfo not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
log_user 1

if {$matches < $needed_nodes} {
	skip "$needed_nodes idle nodes required in default partition, only $matches found"
}

set nodes 0
set timeout $max_job_delay
set srun_pid [spawn $srun -t1 -N1-2 --use-min-nodes -n$ncpus $bin_printenv SLURM_NNODES]
expect {
	-re "srun: job $number queued and waiting for resources" {
		exp_continue
	}
	-re "srun: job $number has been allocated resources" {
		exp_continue
	}
	-re "($number)" {
		set nodes $expect_out(1,string)
		if {$nodes != 1} {
			log_error "Expected 1 allocated node"
			set exit_code 1
		}
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		slow_kill $sun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
