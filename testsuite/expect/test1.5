source ./globals

set test_id     "1.5"
set exit_code   0
set matches     0

print_header $test_id

#
# Report the srun help message
#
set srun_pid [spawn $srun --help]
expect {
	-re "Usage:" {
		incr matches
		exp_continue
	}
	-re "Parallel run options:" {
		incr matches
		exp_continue
	}
	-re "Constraint options:" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		slow_kill $srun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

set target_matches 3
if {$matches < $target_matches && [test_alps]} {
#	NOTE: On emulated Cray system, the matches should be 3.
#	On a real ALPS/BASIL Cray system, the matches should be 1.
	set target_matches 1
}
if {$matches < $target_matches} {
	send_user "\nFAILURE: srun failed to report help message ($matches of $target_matches)\n"
	set exit_code 1
}
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
