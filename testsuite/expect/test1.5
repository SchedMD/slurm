source ./globals

set matches     0

#
# Report the srun help message
#
spawn $srun --help
expect {
	-re "Usage:" {
		incr matches
		exp_continue
	}
	-re "Parallel run options:" {
		incr matches
		exp_continue
	}
	-re "Constraint options:" {
		incr matches
		exp_continue
	}
	timeout {
		fail "srun not responding"
	}
	eof {
		wait
	}
}

set target_matches 3
if {$matches < $target_matches} {
	fail "srun failed to report help message ($matches of $target_matches)"
}
