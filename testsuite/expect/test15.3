source ./globals

set version     0

#
# Report the salloc version number
#
spawn $salloc --version
expect {
	-re "(slurm ($number)\\.($number)\\.($number).*\n)" {
		incr version
		exp_continue
	}
	timeout {
		fail "salloc not responding"
	}
	eof {
		wait
	}
}

if {$version != 1} {
	fail "Did not get proper salloc version number"
}
