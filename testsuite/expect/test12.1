source ./globals

set test_id     "12.1"
set exit_code   0
set matches     0
set not_support 0

print_header $test_id

#
# Report the sacct help format
#

spawn $sacct --help
expect {
	-re "SLURM accounting storage is disabled" {
		set not_support 1
		exp_continue
	}
	-re "sacct...OPTION" {
		incr matches
		exp_continue
	}
	-re "Valid..OPTION..values are:" {
		incr matches
		exp_continue
	}
	-re "--duplicates" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: sacct not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$not_support != 0} {
	send_user "\nWARNING: can not test without accounting enabled\n"
	exit 0
}
if {$matches != 3} {
	send_user "\nFAILURE: sacct --help failed ($matches != 3)\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
