source ./globals

set exit_code            0

if {[test_front_end] != 0 && [test_super_user] == 0} {
	skip "This test is incompatible with front-end systems"
}
if {[test_launch_test_exec]} {
	skip "This test is incompatible with LaunchParameters=test_exec"
}

#
# Submit a slurm job that will execute bogus job name
#
set matches 0
set timeout $max_job_delay
set srun_pid [spawn $srun -N1 -t1 /bad/bad/bad]
expect {
	-re "No such file" {
		log_debug "No worries, this error is expected"
		set matches 1
		exp_continue
	}
	-re "Unable to run executable" {
		log_debug "No worries, this error is expected"
		set matches 1
		 exp_continue
	}
	-re "time limit exceeded" {
		log_error "srun time limit exceeded"
		set exit_code 1
		exp_continue
	}
	-re "Terminated" {
		log_error "srun didn't terminate properly"
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		slow_kill $srun_pid
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches == 0} {
	fail "Unexpected output from bad job name"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
