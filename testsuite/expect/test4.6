source ./globals

set iteration    0

#
# Check the sinfo iteration
#

spawn $sinfo --iterate=2
expect {
	-re "PARTITION" {
		incr iteration
		if {$iteration >= 3} {
			set sinfo_pid [exp_pid]
			exec $bin_kill -TERM $sinfo_pid
		}
		exp_continue
	}
	timeout {
		fail "sinfo not responding"
	}
	eof {
		wait
	}
}

if {$iteration < 3} {
	fail "sinfo iteration error"
}
