source ./globals

if {[file executable $sgather] == 0} {
	skip "$sgather does not exist"
}

set matches 0
spawn $sgather --usage
expect {
	-re "Usage:" {
		incr matches
		exp_continue
	}
	timeout {
		fail "sgather is not responding"
	}
	eof {
		wait
	}
}
if {$matches != 1} {
	fail "sgather failed to report usage ($matches != 1)"
}
