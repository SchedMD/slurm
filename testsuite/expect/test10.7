source ./globals

set test_id       "10.7"
set exit_code     0
set matches       0
set stuff         ""
set too_small     0

print_header $test_id

if {[file exists $smap] == 0} {
	send_user "\nWARNING: smap not installed\n"
	exit 0
}

#
# Check the smap format of header for displaying job information
# in curses format.
#
spawn $smap -Dj
expect {
	-re "Screen is too small" {
		set too_small 1
		exp_continue
	}
	-re "ID J" {
		set stuff [concat $stuff "1"]
		incr matches
		exp_continue
	}
	-re "OBID" {
		set stuff [concat $stuff "2"]
		incr matches
		exp_continue
	}
	-re "PARTITION" {
		set stuff [concat $stuff "3"]
		incr matches
		exp_continue
	}
	-re "USER" {
		set stuff [concat $stuff "5"]
		incr matches
		exp_continue
	}
	-re "NAME" {
		set stuff [concat $stuff "6"]
		incr matches
		exp_continue
	}
	-re "TIME" {
		set stuff [concat $stuff "8"]
		incr matches
		exp_continue
	}
	-re "NODES" {
		set stuff [concat $stuff "9"]
		incr matches
		exp_continue
	}
	-re "LIST" {
		set stuff [concat $stuff "10"]
		incr matches
		send "q"
		exp_continue
	}

	timeout {
		send_user "\nFAILURE: smap not responding\n"
		set exit_code 1
	}
	eof {
		wait
      	}
}
if {$too_small != 0} {
	send_user "\nWARNING: Screen is too small for test\n"
	exit 0
}
if {$matches != 8} {
	#send_user $matches ."\n"
	send_user $stuff
	send_user "\nFAILURE: smap job information display\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
