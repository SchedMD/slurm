source ./globals

set exit_code   0

#
# Report all slurm nodes, multi-line (default) mode
#
set matches     0
spawn $scontrol show node
expect {
	-re " Weight=" {
		set matches 1
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches != 1} {
	log_error "scontrol show node command failed"
	set exit_code 1
}

#
# Report all slurm nodes, one record per line mode
#
set matches     0
spawn $scontrol --oneliner show node
expect {
	-re "  Weight=" {
		set matches 1
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches != 0} {
	fail "scontrol --oneliner mode failed"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
