source ./globals

set exit_code   0

#
# Report all slurm partitions with verbose option
#
set matches       0
spawn $scontrol -v show partition
expect {
	-re "last_update_time" {
		incr matches
		exp_continue
	}
	-re "Default=YES" {
		incr matches
		exp_continue
	}
	timeout {
		fail "scontrol not responding"
	}
	eof {
		wait
	}
}
if {$matches != 2} {
	log_error "scontrol show partition command failed"
	set exit_code 1
}

#
# Report all slurm partitions with quiet option
#
set matches       0
spawn $scontrol -Q show partition
expect {
	-re "last_update_time" {
		log_error "Quiet format failure"
		set exit_code 1
		exp_continue
	}
	-re "Default=YES" {
		incr matches
		exp_continue
	}
	timeout {
		fail "scontrol not responding"
	}
	eof {
		wait
	}
}
if {$matches != 1} {
	fail "scontrol show partition command failed"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
