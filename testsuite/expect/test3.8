source ./globals

set exit_code     0
set file_in       "test$test_id.input"
set file_out      "test$test_id.output"
set file_err      "test$test_id.error"
set file_flag_1   "test$test_id.run.1"
set file_flag_2   "test$test_id.run.2"
set file_flag_3   "test$test_id.run.3"
set file_flag_4   "test$test_id.run.4"
set job_id        0
set node_cnt 1-4

if {[is_super_user] == 0} {
	skip "This test can't be run except as SlurmUser"
}

#
# Delete left-over input script plus stdout/err files
# Build input script file that runs two job steps
#
exec $bin_rm -f $file_in $file_out $file_err
exec $bin_rm -f $file_flag_1 $file_flag_2 $file_flag_3
make_bash_script $file_in "
    if   \[ -f $file_flag_3 \]
    then
        $bin_touch $file_flag_4
    elif \[ -f $file_flag_2 \]
    then
        $bin_touch $file_flag_3
    elif \[ -f $file_flag_1 \]
    then
        $bin_touch $file_flag_2
    else
        $bin_touch $file_flag_1
    fi
    $srun -n4 -O -l $bin_sleep 60
"

#
# Spawn a srun batch job that uses stdout/err and confirm their contents
#
set timeout $max_job_delay
set sbatch_pid [spawn $sbatch --requeue -N$node_cnt --output=$file_out --error=$file_err -t2 $file_in]
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		slow_kill $sbatch_pid
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$job_id == 0} {
	fail "Batch submit failure"
}

#
# Wait for job to begin, then requeue it
#
if {[wait_for_job $job_id "RUNNING"] != 0} {
	log_error "Waiting for job to begin"
	set exit_code 1
}
exec $bin_sleep 15
spawn $scontrol requeue $job_id
expect {
	-re "error" {
		log_error "Some scontrol error happened"
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

#
# Wait for job to restart, then requeue it again
#
if {[wait_for_job $job_id "RUNNING"] != 0} {
	log_error "Waiting for job to restart"
	set exit_code 1
}
exec $bin_sleep 15
spawn $scontrol requeue $job_id
expect {
	-re "error" {
		log_error "Some scontrol error happened"
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}

#
# Wait for job to complete and check for files
#
if {[wait_for_job $job_id "RUNNING"] != 0} {
	log_error "Waiting for job to restart"
	set exit_code 1
}
if {[wait_for_job $job_id "DONE"] != 0} {
	log_error "Waiting for job to complete"
	cancel_job $job_id
	set exit_code 1
}
if {[wait_for_file $file_flag_1] != 0} {
	log_error "File $file_flag_1 is missing"
	set exit_code 1
}
if {[wait_for_file $file_flag_2] != 0} {
	log_error "File $file_flag_2 is missing"
	set exit_code 1
}
if {[wait_for_file $file_flag_3] != 0} {
	log_error "File $file_flag_3 is missing"
	set exit_code 1
}
if {[file exists $file_flag_4]} {
	log_error "File $file_flag_4 is found"
	set exit_code 1
}

#
# Now run the same test, but with job requeue disabled via the
# srun --no-requeue option
#
set job_id        0

exec $bin_rm -f $file_flag_1 $file_flag_2 $file_flag_3 $file_flag_4

set sbatch_pid [spawn $sbatch --no-requeue --output=$file_out --error=$file_err -t2 $file_in]
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		log_error "srun not responding"
		slow_kill $sbatch_pid
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$job_id == 0} {
	fail "Batch submit failure"
}

#
# Wait for job to begin, then requeue it
#
if {[wait_for_job $job_id "RUNNING"] != 0} {
	log_error "Waiting for job to begin"
	set exit_code 1
}
set disabled 0
exec $bin_sleep 15
spawn $scontrol requeue $job_id
expect {
	-re "Requested operation is presently disabled" {
		set disabled 1
		log_debug "This error was expected, no worries"
		exp_continue
	}
	-re "error" {
		log_error "Some scontrol error happened"
		set exit_code 1
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$disabled == 0} {
	log_error "srun's --no-requeue option ignored"
	set exit_code 1
}

#
# Wait for job to complete and check for files
#
if {[wait_for_job $job_id "DONE"] != 0} {
	cancel_job $job_id
	fail "Waiting for job to complete"
}
if {[wait_for_file $file_flag_1] != 0} {
	fail "File $file_flag_1 is missing"
}
if {[file exists $file_flag_2]} {
	fail "File $file_flag_2 is found"
}

if {$exit_code == 0} {
	exec $bin_rm -f $file_in $file_out $file_err
	exec $bin_rm -f $file_flag_1 $file_flag_2 $file_flag_3 $file_flag_4
} else {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
