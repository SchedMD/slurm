source ./globals

set exit_code   0

#
# Report the slurm daemon status and explicitly exit
#
set matches     0
set ping_sent   0
set exit_sent   0
spawn $scontrol
expect {
	 -re "Slurmctld.primary" {
		incr matches
		exp_continue
	}
	-re "scontrol: " {
		if {$matches == 0} {
			if {$ping_sent == 0} {
				send "ping\r"
				set ping_sent 1
			}
		} else {
			if {$exit_sent == 0} {
				send "exit\r"
				set exit_sent 1
			}
		}
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches != 1} {
	log_error "scontrol ping or exit command failed"
	set exit_code 1
}

#
# Report the slurm daemon status and explicitly quit
#
set matches     0
set ping_sent   0
set quit_sent   0
spawn $scontrol
expect {
	-re "Slurmctld.primary" {
		incr matches
		exp_continue
	}
	-re "scontrol: " {
		if {$matches == 0} {
			if {$ping_sent == 0} {
				send "ping\r"
				set ping_sent 1
			}
		} else {
			if {$quit_sent == 0} {
				send "quit\r"
				set quit_sent 1
			}
		}
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches != 1} {
	log_error "scontrol ping or quit command failed"
	set exit_code 1
}

#
# Report the slurm daemon status, repeat via !! command and explicitly quit
#
set matches     0
set ping_sent   0
set excl_sent   0
set quit_sent   0
spawn $scontrol
expect {
	-re "Slurmctld.primary" {
		incr matches
		exp_continue
	}
	-re "scontrol: " {
		if {$matches == 0} {
			if {$ping_sent == 0} {
				send "ping\r"
				set ping_sent 1
			}
		}
		if {$matches == 1} {
			if {$excl_sent == 0} {
				send "!!\r"
				set excl_sent 1
			}
		}
		if {$matches > 1} {
			if {$quit_sent == 0} {
				send "quit\r"
				set quit_sent 1
			}
		}
		exp_continue
	}
	timeout {
		log_error "scontrol not responding"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$matches != 2} {
	fail "scontrol ping, !!, or quit command failed"
}

if {$exit_code != 0} {
	fail "Test failed due to previous errors (\$exit_code = $exit_code)"
}
