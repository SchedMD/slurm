source ./globals

set matches     0

#
# Report the sacctmgr help format
#

spawn $sdiag --help
expect {
	-re "Usage: sdiag" {
		incr matches
		exp_continue
	}
	-re "Help options:" {
		incr matches
		exp_continue
	}
	timeout {
		fail "sdiag not responding"
	}
	eof {
		wait
	}
}

if {$matches != 2} {
	fail "sdiag --help failed ($matches != 2)"
}
