source ./globals

set test_id     "2.11"
set exit_code   0
set file_in     "test$test_id.input"
set file_out    "test$test_id.output"
set job_id      0
set scontrol_id 0

print_header $test_id

if {[test_launch_poe]} {
	set step_id 1
} elseif { [string compare [test_launch_type] "slurm"] } {
	send_user "\nWARNING: This test is only compatible with systems using launch/slurm or launch/poe\n"
	exit $exit_code
} else {
	set step_id 0
}

# Delete left-over stdout file
file delete $file_out

#
# Build input script file
#
make_bash_script $file_in "
  $srun $bin_sleep 10 &
  $bin_sleep 1
  $scontrol listpids \$SLURM_JOB_ID.10 \$SLURMD_NODENAME
  $scontrol listpids \$SLURM_JOB_ID.$step_id \$SLURMD_NODENAME
  $scontrol listpids \$SLURM_JOB_ID \$SLURMD_NODENAME
"

#
# Spawn a srun batch job that uses stdout/err and confirm their contents
#
set sbatch_pid [spawn $sbatch --output=$file_out -t1 $file_in]
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		slow_kill $sbatch_pid
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$job_id == 0} {
	send_user "\nFAILURE: batch submit failure\n"
	exec $bin_rm -f $file_in
	exit 1
}

#
# Wait for job to complete
#
if {[wait_for_job $job_id "DONE"] != 0} {
	send_user "\nFAILURE: waiting for job to complete\n"
	exec $bin_rm -f $file_in
	exit 1
}

#
# Verify job_id in output file
#
set matches 0
if {[wait_for_file $file_out] == 0} {
	spawn $bin_cat $file_out
	expect {
		-re "Job step ($number).10 does not exist on this node." {
			incr matches
			exp_continue
		}
		-re "$job_id *$step_id *0 *0" {
			incr matches
			exp_continue
		}
		eof {
			wait
		}
	}
}
if {$matches != 3} {
	send_user "\nFAILURE: scontrol listpids output error\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
	exec $bin_rm -f $file_in $file_out
}
exit $exit_code
