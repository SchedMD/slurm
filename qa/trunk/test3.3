#!/usr/bin/expect
#
# Purpose: Test of SLURM functionality
#          Validate scontrol update command for nodes.
#
# Output:  "TEST: #.#" followed by "SUCCESS" if test was successful, OR
#          "FAILURE: ..." otherwise with an explanation of the failure, OR
#          anything else indicates a failure mode that must be investigated.
#
source ./globals

set test_id        "3.3"
set authorized     1
set exit_code      0
set node_name      ""
set node_old_state ""
set node_new_state ""
set read_state     ""

print_header $test_id

#
# Identify a node and its state
#
spawn $scontrol show node  
expect {
        -re "NodeName=($alpha_numeric) State=IDLE" {
                if {[string compare $node_name ""] == 0} {
                        set node_name $expect_out(1,string)
                        set node_old_state "IDLE"
                }
                exp_continue
        }
        -re "NodeName=($alpha_numeric) State=ALLOCATED" {
                if {[string compare $node_name ""] == 0} {
                        set node_name $expect_out(1,string)
                        set node_old_state "ALLOCATED" 
                }
                exp_continue
        }
	-re "NodeName=($alpha_numeric) State=($alpha_cap)" {
		if {[string compare $node_name ""] == 0} {
			set node_name $expect_out(1,string)
			set node_old_state $expect_out(2,string)
		}
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}

#
# Validate current node information
#
if {[string compare $node_name ""] == 0} {
	send_user "\nFAILURE: scontrol unable to identify any nodes\n"
	exit 1
}
if {[string compare $node_old_state ""] == 0} {
	send_user "\nFAILURE: scontrol unable to identify state"
	send_user " of node $node_name\n"
	exit 1
}
if {[string compare $node_old_state "UNKNOWN"] == 0} {
	send_user "\nWarning: Unusable node state $node_old_state\n"
	exit 0
}
if {[string compare $node_old_state "DRAINING"] == 0} {
	send_user "\nWarning: Unusable node state $node_old_state\n"
	exit 0
}
if {[string compare $node_old_state "DRAINED"] == 0} {
        send_user "\nWarning: Unusable node state $node_old_state\n"
        exit 0
}
if {[string compare $node_old_state "DOWN"] == 0} {
        send_user "\nWarning: Unusable node state $node_old_state\n"
        exit 0
}
if {[string compare $node_old_state "COMPLETING"] == 0} {
        send_user "\nWarning: Unusable node state $node_old_state\n"
        exit 0
}

#
# Change that node's state
#
spawn $scontrol update NodeName=$node_name State=DRAINING Reason=TESTING
expect {
	-re "slurm_update error: ($alpha_numeric) ($alpha_numeric)" {
		set access_err 0
		set err_msg1 $expect_out(1,string)
		set err_msg2 $expect_out(2,string)
		if {[string compare $err_msg1 "Invalid"]} {
			set access_err 1
		}
		if {[string compare $err_msg2 "user"]} {
			set access_err 1
		}
		if {$access_err == 1} {
			send_user "\nFAILURE: scontrol update error\n"
			set exit_code 1
		} else {
			set authorized 0
		}
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}

#
# Validate node's new state
#
spawn $scontrol show node $node_name
expect {
	-re "State=($alpha_cap)" {
		set read_state $expect_out(1,string)
		exp_continue
	}
	-re "Reason=($alpha_cap)" {
		set reason_code $expect_out(1,string)
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}
if {$authorized == 1} {
	set state_changed 0
	if {[string compare $read_state "DRAINED"] == 0} {
		set state_changed 1
	}
	if {[string compare $read_state "DRAINING"] == 0} {
		set state_changed 1
	}

	if {$state_changed != 1} {
		send_user "\nFAILURE: scontrol state change error\n"
		set exit_code 1
	}
}
if {$authorized == 1} {
	set reason_set 0
	if {[string compare $reason_code "TESTING"] == 0} {
		set reason_set 1
	}

	if {$reason_set != 1} {
		send_user "\nFAILURE: scontrol reason change error\n"
		set exit_code 1
	}
}

#
# Return that node's state to its old value
#
spawn $scontrol update NodeName=$node_name State=$node_old_state  
expect {
	-re "slurm_update error: Invalid user id" {
		exp_continue
	}
	-re "slurm_update error:" {
		send_user "\nFAILURE: scontrol update error\n"
		set exit_code 1
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}

#
# Record that node's state
#
spawn  $scontrol show node $node_name
expect {

	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
