source ./globals

set test_id     "21.2"
set exit_code   0
set matches     0
set not_support 0

print_header $test_id

#
# Report the sacctmgr help format
#

spawn $sacctmgr --help
expect {
	-re "commit changes immediately" {
		incr matches
		exp_continue
	}
	-re "display tool version number" {
		incr matches
		exp_continue
	}
	-re "add cluster" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: sacctmgr not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$matches != 3} {
	send_user "\nFAILURE: sacctmgr --help failed ($matches)\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
