source ./globals

set test_id     "5.2"
set exit_code   0
set matches     0

print_header $test_id

#
# Report the squeue help message
#

spawn $squeue --help
expect {
	-re "Usage:" {
		incr matches
		exp_continue
	}
	-re "Help options" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: squeue not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}

if {$matches != 2} {
	send_user "\nFAILURE: squeue failed to report help message\n"
	set exit_code 1
}
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
